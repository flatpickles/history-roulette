{
  "manifest_version": 2,

  "background": {
    "persistent": false,
    "page": "background.html"
  },

  "name": "History Roulette",
  "description": "This extension loads random pages from your browser history.",
  "version": "1.0",

  "browser_action": {
    "default_icon": "icons/icon48.png",
    "default_title": "See your past"
  },

  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },

  "permissions": [
    "tabs",
    "history",
    "https://ajax.googleapis.com/"
  ]
}